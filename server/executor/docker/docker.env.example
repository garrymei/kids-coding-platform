# Docker 执行器配置

# 启用 Docker 执行器 (true/false)
USE_DOCKER=false

# 容器资源限制
DOCKER_MEMORY_LIMIT=128m
DOCKER_CPU_LIMIT=0.5
DOCKER_PIDS_LIMIT=64

# 执行超时设置
DOCKER_TIMEOUT_MS=3000
DOCKER_MAX_TIMEOUT_MS=10000

# 容器配置
DOCKER_IMAGE_NAME=kids-code-python:latest
DOCKER_NETWORK_MODE=none
DOCKER_USER=sandbox

# 临时目录配置
DOCKER_TEMP_DIR_SIZE=10m
DOCKER_VAR_TEMP_DIR_SIZE=5m

# 安全配置
DOCKER_READ_ONLY=true
DOCKER_DISABLE_NETWORK=true
DOCKER_DISABLE_PRIVILEGED=true

# 日志配置
DOCKER_LOG_LEVEL=info
DOCKER_ENABLE_DEBUG=false

# 并发控制
DOCKER_MAX_CONCURRENT_CONTAINERS=10
DOCKER_CONTAINER_CLEANUP_DELAY=5000

# 监控配置
DOCKER_ENABLE_METRICS=true
DOCKER_METRICS_INTERVAL=60000
