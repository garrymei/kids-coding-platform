{
  "id": "py-led-002",
  "title": "双灯闪烁",
  "lang": "python",
  "gameType": "led",
  "difficulty": 1,
  "story": "能源站测试：同时点亮 0 号和 1 号灯。",
  "goals": ["输出事件 on0 和 on1"],
