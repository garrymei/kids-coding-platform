    "checks": [{ "type": "eventSet", "expect": ["on0", "on1"] }],
    "constraints": {
      "maxTimeMs": 3000,
      "maxMemMB": 64
    }
  },
  "rewards": { "xp": 15, "coins": 6, "badges": [] }
